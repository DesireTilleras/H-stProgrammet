@model IEnumerable<Author>
@{
    Layout = "_Layout";
}

@if (Model != null)
{
    @foreach (var author in Model)
    {
        <div class="container">
            <div class="rounded" style="border:1px solid grey;background-color:antiquewhite">
                <div class="row"> 
                    <div class="col-1"></div>
                    <div class="col" style="height:100px;">
                        <div>
                            <div class="row" style="height:50px;">
                                <h3>@author.Name</h3>
                            </div>
                            <div class="row">
                                @author.HomeTown
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="d-grid d-md-flex justify-content-lg-center" style="height:100px;vertical-align:middle">
                            <input type="submit" class="btn btn-outline-primary" style="height:50px" value="Details" onclick="location.href='@Url.Action("AuthorDetails", "Author", new {id=author.Id })'">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />

    }

}

