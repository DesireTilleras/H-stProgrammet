@model Review

@{
    Layout = "_Layout";
}

<form method="post" asp-action="CreateReview">
    <div class="border p-3">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <h2 class="text-info pl-3">@ViewData["title"]</h2>
                    <div class="col-4">
                        <div>
                            <label asp-for="Name">Your Name:</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div>
                            <label asp-for="Text">Review:</label>
                            <textarea asp-for="Text" class="form-control" ></textarea>
                            <span asp-validation-for="Text" class="text-danger"></span>
                        </div>
                        <div>
                            <label asp-for="Stars">Stars (5 = Awesome):</label>
                            <select asp-for="Stars" class="form-control">

                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>

                            </select>
                            <span asp-validation-for="Stars" class="text-danger"></span>
                            <br />
                            <div>
                                
                                <input asp-for="BookId" class="text-hide" value="@ViewData["bookid"]" />
                                <span asp-validation-for="BookId" class="text-danger"></span>
                            </div>
                            <br />
                            <input type="submit" value="Add Review" />
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</form>



