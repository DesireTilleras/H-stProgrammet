@model IEnumerable<Horse>
@{
    Layout = "";
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

@if (Model != null)
{
    @foreach (var horse in Model)
    {
        <div class="container">
            <div class="row">
                <div class="col">
                    <b>@horse.Name</b> <br/>@horse.Height
                </div>
                <div class="col">
                    <input type="submit" value="Details" onclick="location.href='@Url.Action("HorseDetails", "Horse", new {id=horse.Id })'">
                </div>
            </div>
        </div>

    }

}