@model IEnumerable<Book>
@{
    Layout = "";
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

    @if (Model != null)
    {
        @foreach (var book in Model)
        {
            <div class="container">
                <div class="row">
                    <div class="col">
                        <img src="@book.PicLink" alt="Sorry, no pic" width="50" height="60" />
                    </div>
                    <div class="col">
                        <b>@book.Name</b>
                    </div>
                    <div class="col">
                        <input type="submit"value="Details" onclick="location.href='@Url.Action("BookDetails", "Book", new {id=book.Id })'">
                    </div>
                </div>
            </div>

        }

    }

