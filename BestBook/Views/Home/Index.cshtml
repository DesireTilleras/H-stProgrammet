@model IEnumerable<Genre>
@{
    ViewData["Title"] = "Home Page";
}

<section>
    <form method="get" style="text-align:center;">
        <label><input class="form-control" type="text" name="SearchText" placeholder="Book/Author"  /></label>
        <input type="submit" value="Search" asp-action="ItemsByName" asp-route-myvar="SearchText"  />
    </form>
    <table class="center">
        <tr>
            <th>Genre</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr><td><a asp-action="BooksByGenre" asp-route-id="@item.Id">@item.GenreName</a></td></tr>
        }
    </table>
</section>
