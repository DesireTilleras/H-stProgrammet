@model IEnumerable<Book>
@{
    Layout = "_Layout";
}

@if (Model != null)
{
    @foreach (var book in Model)
    {
        <div class="container">
            <div class="rounded" style="border:1px solid grey;background-color:antiquewhite">
                <div class="row">
                    <div class="col">
                        <img src="@book.PicLink" alt="Sorry, no pic" class="rounded" width="70" height="100" />
                    </div>
                    <div class="col" style="height:100px;">
                        <div>
                            <div class="row" style="height:50px;">
                                <h3>@book.Name</h3>
                            </div>
                            <div class="row">
                                @book.Description.Truncate(45, "...")
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="d-grid d-md-flex justify-content-lg-center" style="height:100px;vertical-align:middle">
                            <input type="submit" class="btn btn-outline-primary" style="height:50px" value="Details" onclick="location.href='@Url.Action("BookDetails", "Book", new {id=book.Id })'">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />

    }

}

